
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-primary">Lista de Categorias</h2>
            </div>
            <div class="col-md-6 text-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Crear Nuevo</i></a>
            </div>
        </div>

        <table id="tblCategoria" class="table table-striped table-bordered mt-5" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Numero de Orden</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
 @*creamos seccion para incrustrar el archivo .js de categorias*@
