@model BlogApplication.Modelos.Categoria
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-5 text-center">Crear nueva categoria</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 mx-2 border">
        @*verificar las validaciones del modelo segun los DataAnnotation que asignamos a cada campo*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    @* el la etiqueta se mostrara el Nombre que hemos colocado en el Display del modelo categoria [Display(Name ="")]*@
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            @*Instancia de vista parcial, para tener botones de crear y volver atras*@
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolverPartial"/>
                </div>
            </div>

        </div>
    </div>

</form>

