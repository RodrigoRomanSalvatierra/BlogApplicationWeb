
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Crear Nuevo</i></a>
        </div>
    </div>

    <table id="tblArticulo" class="table table-striped table-bordered mt-5" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Fecha Creacion</th>
                <th>Imagen</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@*creamos seccion para incrustrar el archivo .js de articulos*@
@section Scripts{
    <script src="~/js/articulo.js"></script>
}
